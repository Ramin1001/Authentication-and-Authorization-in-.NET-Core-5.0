@{
    var returnUrl = ViewData["ReturnUrl"] as string; // we take ReturnUrl from controller as a string
    var error = TempData["Error"] as string;
}


<h1>Login page</h1>

@if (!string.IsNullOrEmpty(error)) 
{ 
    <h2 class="alert-danger" style="padding:20px;">@error</h2>
}

@* here we encode ReturnUrl and redirect page to the same page  *@
<form action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post">
    <input type="text" name="username" placeholder="Username" />
    <input type="password" name="password" placeholder="Password" />
    <input type="submit" value="login" />
</form>